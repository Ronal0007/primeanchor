doctype html
html(lang='en')
    head
        meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        meta(name='description' content='')
        title PRIME ANCHOR Co LTD
        link(rel='canonical' href='https://getbootstrap.com/docs/4.3/examples/jumbotron/')
        link(rel='shortcut icon' href='./images/wisjane-logo.ico')
        // Bootstrap core CSS
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        link(href='./bootstrap/css/bootstrap.min.css' rel='stylesheet')
        link(href='./bootstrap/css/style.css' rel='stylesheet')
        script(data-ad-client='ca-pub-4697597730958440' async='' src='https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
        style.
          body {
          font-family: sans-serif;
          background-color: #eeeeee;
          }
          
          .file-upload {
            background-color: #ffffff;
            margin: 0 auto;
            padding: 20px;
            margin-top: 6em;
            }
            .file-upload-btn {
            width: 100%;
            margin: 0;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 4px;
            background: #007bff;
            transition: all .2s ease;
            outline: none;
            text-transform: uppercase;
            font-weight: 700;
            }
            .file-upload-btn:hover {
            background: #007bff;
            color: #ffffff;
            transition: all .2s ease;
            cursor: pointer;
            }
            .file-upload-btn:active {
            border: 0;
            transition: all .2s ease;
            }
            .file-upload-content {
            display: none;
            text-align: center;
            }
            .file-upload-input {
            position: absolute;
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            outline: none;
            opacity: 0;
            cursor: pointer;
            }
            .image-upload-wrap {
            margin-top: 20px;
            border: 4px dashed #007bff!important;
            position: relative;
            }
            .image-dropping,
            .image-upload-wrap:hover {
            background-color: #1FB264;
            border: 4px dashed #ffffff;
            }
            .image-title-wrap {
            padding: 0 15px 15px 15px;
            color: #222;
            }
            .drag-text {
            text-align: center;
            }
            .drag-text h3 {
            font-weight: 100;
            text-transform: uppercase;
            color: #15824B;
            padding: 60px 0;
            }
            .file-upload-image {
            max-height: 200px;
            max-width: 200px;
            margin: auto;
            padding: 20px;
            }
            .remove-image {
            width: 200px;
            margin: 0;
            color: #fff;
            background: #cd4535;
            border: none;
            padding: 10px;
            border-radius: 4px;
            border-bottom: 4px solid #b02818;
            transition: all .2s ease;
            outline: none;
            text-transform: uppercase;
            font-weight: 700;
            }
            .remove-image:hover {
            background: #c13b2a;
            color: #ffffff;
            transition: all .2s ease;
            cursor: pointer;
            }
            .remove-image:active {
            border: 0;
            transition: all .2s ease;
            }
            #navbarsExampleDefault.collapse.navbar-collapse{
              padding-left: 600px;
            }
        // Custom styles for this template
    body(oncontextmenu='return false')
        .container
            nav#myHeader.navbar.navbar-expand-lg.navbar-light.bg-info
                a.navbar-brand(href='https://primeanchor.co.tz' style='font-family:verdana;font-size: 21px; color: rgb(255, 255, 255)')
                    | PRIME
                    | ANCHOR
                    | Co. LTD
                button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarsExampleDefault' aria-controls='navbarsExampleDefault' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarsExampleDefault.collapse.navbar-collapse
                    ul.navbar-nav.ml-auto(id='#mainNav')
                        li.nav-item.active
                            a.nav-link.pull-right(href='/') Logout
        #mainform.col-lg-12
          #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style=' margin-top:50px')
            .panel.panel-success
              .panel-heading
                .panel-title Upload Image
              .panel-body
                form.form-horizontal(role='form', method='post', action='/uploads', enctype='multipart/form-data')
                  .file-upload
                    .image-upload-wrap
                      input.file-upload-input(name='img', type='file', onchange='readURL(this);', accept='image/*')
                      .drag-text
                        h3 Drag and drop a file or select add Image
                    .file-upload-content
                      img.file-upload-image(src='#', alt='your image')
                      .image-title-wrap
                        button.remove-image(type='button', onclick='removeUpload()')
                          | Remove 
                          span.image-title Uploaded Image
                    br
                    button.file-upload-btn(type='submit') Upload

                table.table.col-9#table
                      thead 
                          tr
                          th(scope='col') #
                            th(scope='col') Image
                            th(scope='col') Image Name
                            th(scope='col') Image Size
                            th(scope='col') Time Uploaded
                            th(scope='col') Action
                      tbody
                      for image in images
                          tr
                          th(scope='row') #{image.img_id}
                          th(scope='row') 
                            img(src= image.image_name alt='' width='100' height='100')
                          th(scope='row') #{image.image_name}
                          th(scope='row') #{image.image_size}
                          th(scope='row') #{image.created_at}
                          th(scope='row')
                            form.form-horizontal(role='form', method='POST', action='/delete/'+ image.img_id + "/" + image.image_name) 
                              button.btn.btn-large.btn-danger( type='submit')
                                i.fa.fa-trash(aria-hidden='true')
script.jsbin(src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
